{
  "manifest_version": 3,
  "name": "Grid View for GitHub",
  "description": "Turning the repositories into a grid view for GitHub",
  "version": "1.0.0",
  "permissions": ["storage"],
  "icons": {
    "16": "assets/GitHubGridView16.png",
    "32": "assets/GitHubGridView32.png",
    "48": "assets/GitHubGridView48.png",
    "64": "assets/GitHubGridView64.png",
    "128": "assets/GitHubGridView128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Grid View for GitHub"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "js": ["content-scripts/main.js"],
      "matches": ["*://github.com/*"]
    }
  ]
}
